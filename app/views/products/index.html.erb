<div class="container mt-5 pb-5">

  <div class="row">

    <div class="col-lg-3">

      <div class="list-group my-4">
        <% Category.all.each do |category| %>
          <%= link_to category.name, category, class: "list-group-item" %>
        <% end %>
      </div>

    </div>

    <div class="col-lg-9">
      <%= render 'shared/carousel' %>
      <div class="row">
        <%= render 'products/product' %>
        <div class="col-lg-12 mt-5 pb-5">
          <%= will_paginate @products, list_classes: %w(pagination justify-content-center) %>
        </div>
      </div>
    </div>

  </div>
</div>
