<% @products.each do |product| %>
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
      <%= image_tag(product.image, class: "card-img-top") %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to product.name, product, class: "text-decoration-none" %>
          <%= link_to "Add to Cart", product_order_items_path(product), method: :post, class: "text-decoration-none" %>
        </h4>
        <h5>$<%= product.price %></h5>
        <p class="text-justify card-text"><%= product.description %></p>
      </div>
    </div>
  </div>
<% end %>