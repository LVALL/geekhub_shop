<% @comments.each do |comment| %>
  <div class="col-lg-10">
    <div class="card shadow mb-5">
      <div class="card-header">
        <h6><%= comment.user.name %></h6>
      </div>
      <div class="card-body">
        <% comment.rating.times do %>
          <i class="fas fa-star" style="color: #ffde00"></i>
        <% end %>
        <% blank_stars(comment.rating).times do %>
          <i class="far fa-star" style="color: #e1e1e1"></i>
        <% end %>
        <p class="card-text mt-3"><%= comment.body %></p>
      </div>
      <% if comment_author?(current_user, comment) %>
        <div class="row">
          <div class="col-12 text-right py-3">
            <%= link_to 'Delete', product_comment_path(@product, comment), method: :delete, class: "btn btn-danger text-white mr-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
